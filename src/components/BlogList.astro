---
import { getCollection } from "astro:content";
import CardWrapper from "./CardWrapper.astro";
import Subheading from "./Subheading.astro";

const allPosts = await getCollection("blog");
---

<section>
  <Subheading text="Blog" />
  <ul class="list-none md:grid md:grid-cols-2 gap-4 flex flex-col mt-3">
    {
      allPosts.map((post) => (
        <CardWrapper>
          <a href={`/blog/${post.slug}`}>
            <article class="flex flex-col gap-4">
              <div>
                <h4 class="text-lg font-medium line-clamp-1">
                  {post.data.title}
                </h4>
                <p class="line-clamp-2">{post.data.description}</p>
              </div>
              <p class="text-sm">{post.data.createdAt}</p>
            </article>
          </a>
        </CardWrapper>
      ))
    }
  </ul>
</section>
