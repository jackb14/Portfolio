---
import CardWrapper from "./CardWrapper.astro";
import ProjectCardLink from "./ProjectCardLink.astro";

export interface Props {
  title: string;
  body: string;
  githubLink: string;
  deployedLink: string;
}

const { githubLink, deployedLink, title, body } = Astro.props;
---

<CardWrapper>
  <div class="flex flex-col justify-between h-full">
    <div>
      <h4 class="text-lg font-medium">
        {title}
      </h4>
      <p class="line-clamp-2">
        {body}
      </p>
    </div>
    <div class="mt-4 flex items-center justify-start gap-4">
      <ProjectCardLink link={githubLink} text="GitHub" />
      <ProjectCardLink link={deployedLink} text="Visit" />
    </div>
  </div>
</CardWrapper>
