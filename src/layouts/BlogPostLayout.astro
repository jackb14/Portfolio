---
import ArrowSmallLeftIcon from "../components/ArrowSmallLeftIcon.astro";
import ArrowTopRightOnSquareIcon from "../components/ArrowTopRightOnSquareIcon.astro";
import BlogPostFooterCard from "../components/BlogPostFooterCard.astro";
import PersonalBio from "../components/PersonalBio.astro";
import SectionBreak from "../components/SectionBreak.astro";
import Layout from "./Layout.astro";

const { entry } = Astro.props;
---

<Layout title={entry.data.title}>
  <div class="prose m-auto">
    <a class="flex gap-2 no-underline mb-6" href="/">
      <span class="mt-[6px]"><ArrowSmallLeftIcon /></span>
      <span class="hover:underline">Go back</span>
    </a>
    <h1>{entry.data.title}</h1>
    <div class="flex flex-col gap-2">
      <div class="flex gap-2">
        <div
          class="h-6 w-6 rounded-full bg-gradient-to-r from-purple-600 to-blue-600 mt-[2px]"
        >
        </div>
        <p class="m-0">Written by {entry.data.author}</p>
      </div>
      <p class="text-sm m-0">{entry.data.createdAt}</p>
    </div>
    <p>{entry.data.description}</p>
    <slot />
    <div class="my-12"><SectionBreak /></div>
    <PersonalBio />
    <div class="md:grid md:grid-cols-2 gap-4 flex flex-col mb-12">
      <BlogPostFooterCard text="See other blog posts" href="/" />
      <BlogPostFooterCard text="Check out what I'm building" href="/" />
    </div>
    <div class="flex items-center justify-end">
      <a
        href={`https://github.com/jackblatch/Portfolio/tree/main/src/content/blog/${entry.id}`}
        target="_blank"
        rel="noopener noreferrer"
        class="flex gap-2 text-gray-500 hover:text-gray-700"
        >Edit on GitHub <span class="mt-[4px]"
          ><ArrowTopRightOnSquareIcon /></span
        ></a
      >
    </div>
  </div>
</Layout>
