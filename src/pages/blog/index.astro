---
import CardWrapper from "../../components/CardWrapper.astro";
import Heading from "../../components/Heading.astro";
import Layout from "../../layouts/Layout.astro";
const allPosts = await Astro.glob("./*.md");
---

<Layout title="Blog Posts">
  <Heading text="Blog Posts" />
  <ul class="list-none grid grid-cols-2 gap-4 mt-8">
    {
      allPosts.map((post) => (
        <CardWrapper>
          <a href={post.url}>
            <div class="flex flex-col gap-4">
              <div>
                <h3 class="text-xl font-medium">{post.frontmatter.title}</h3>
                <p>{post.frontmatter.description}</p>
              </div>
              <p class="text-sm">{post.frontmatter.createdAt}</p>
            </div>
          </a>
        </CardWrapper>
      ))
    }
  </ul>
</Layout>
